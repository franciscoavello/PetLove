<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.BuscarFragment"
    android:clipChildren="false">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/frame"
        app:layout_heightPercent="75%"
        app:layout_widthPercent="94%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="2%"
        app:rotation_degrees="16"
        app:max_visible="3"
        app:min_adapter_stack="6"
        android:elevation="8dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_heightPercent="23%"
        app:layout_widthPercent="90%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/frame"
        android:background="#00000000">

        <ImageButton
            android:id="@+id/siguienteMascotaBoton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/estados_boton"
            android:src="@drawable/ic_dislike"
            android:tint="@color/azul"
            android:elevation="5dp"/>

        <ImageButton
            android:id="@+id/likeMascotaBoton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/estados_boton"
            android:src="@drawable/ic_like"
            android:tint="@color/rojo"
            android:elevation="5dp"/>

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>