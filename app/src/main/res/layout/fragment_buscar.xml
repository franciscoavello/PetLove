<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.BuscarFragment">


    <RelativeLayout
        android:id="@+id/contenedorImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="5dp"
        android:background="@color/blanco">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imagenMascota"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:layout_margin="5dp"
            android:src="@drawable/perro_jugando"
            android:scaleType="centerCrop"
            app:siRadius="18dp"/>


        <RelativeLayout
            android:id="@+id/imagenLayout"
            android:layout_width="match_parent"
            android:background="@drawable/gradiente"
            android:layout_height="380dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/descripcionMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santiago | 2 aÃ±os"
                android:textColor="#AAAAAA"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobby"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_above="@+id/descripcionMascota"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_info"
                android:rotation="180"/>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/botonesBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contenedorImagen"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/boton_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_like"
                android:src="@drawable/ic_action_name"
                android:elevation="5dp"
                android:clickable="true"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:rotation="15"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>






</RelativeLayout>
