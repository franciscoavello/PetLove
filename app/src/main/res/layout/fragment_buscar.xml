<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.BuscarFragment">

    <RelativeLayout
        android:id="@+id/contenedorImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/esquinas_redondas"
        android:elevation="10dp">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imagenMascota"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:src="@drawable/perro_jugando"
            android:scaleType="centerCrop"
            app:siRadius="18dp"/>


        <RelativeLayout
            android:id="@+id/imagenLayout"
            android:layout_width="match_parent"
            android:background="@drawable/gradiente"
            android:layout_height="390dp">

            <TextView
                android:id="@+id/descripcionMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santiago"
                android:textColor="#AAAAAA"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/nombreMascotaBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobby"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_above="@+id/descripcionMascota"/>

            <ImageButton
                android:id="@+id/iconoInformacion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_info"
                android:background="@android:color/transparent"
                android:rotation="180"/>


        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/botonesBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/likeMascotaBoton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/estados_boton"
            android:src="@drawable/ic_like"
            android:tint="@color/rojo"
            android:elevation="5dp"/>

        <ImageButton
            android:id="@+id/siguienteMascotaBoton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/estados_boton"
            android:src="@drawable/ic_dislike"
            android:tint="@color/azul"
            android:elevation="5dp"/>

    </LinearLayout>



</LinearLayout>
