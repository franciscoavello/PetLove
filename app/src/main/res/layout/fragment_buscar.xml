<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.BuscarFragment">

    <RelativeLayout
        android:id="@+id/contenedorImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        android:background="@color/blanco">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imagenMascota"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_margin="5dp"
            android:src="@drawable/perro_jugando"
            android:scaleType="centerCrop"
            app:siRadius="18dp"/>


        <RelativeLayout
            android:id="@+id/imagenLayout"
            android:layout_width="match_parent"
            android:background="@drawable/gradiente"
            android:layout_height="390dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/descripcionMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santiago | 2 aÃ±os"
                android:textColor="#AAAAAA"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobby"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_above="@+id/descripcionMascota"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_info"
                android:rotation="180"/>


        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/botonesBuscar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom">

        <com.like.LikeButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:like_drawable="@drawable/heart_on"
            app:unlike_drawable="@drawable/ic_action_name"
            app:circle_start_color="@color/colorPrimary"
            app:circle_end_color="@color/colorAccent"
            app:icon_size="50dp"
            app:anim_scale_factor="8.0"
            android:id="@+id/botonLike"
            android:elevation="18dp"/>

        <Button
            android:id="@+id/agregarMascotaBackground"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/estados_boton"
            android:elevation="18dp"/>

    </RelativeLayout>



</RelativeLayout>
