<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">


        <LinearLayout
            android:id="@+id/fotosSubidaNuevaMascota"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"
            android:gravity="center"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/miniaturaPerfil"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/esquinas_redondas"
                    android:src="@color/suave"/>

                <ImageView
                    android:id="@+id/miniaturaPerfil2"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/esquinas_redondas"
                    android:src="@color/suave"/>

                <ImageView
                    android:id="@+id/miniaturaPerfil3"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/esquinas_redondas"
                    android:src="@color/suave"/>

                <ImageView
                    android:id="@+id/miniaturaPerfil4"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/esquinas_redondas"
                    android:src="@color/suave"/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/fotosSubidaNuevaMascota"
            android:id="@+id/nombreNuevaMascota_text_input_layout"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/nombreNuevaMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="5"
                android:inputType="text"
                android:hint="¿Cuál es el nombre de su mascota?"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/nombreNuevaMascota_text_input_layout"
            android:id="@+id/razaNuevaMascota_text_input_layout"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/razaNuevaMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="5"
                    android:inputType="text"
                    android:hint="¿De qué raza es su mascota?"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/razaNuevaMascota_text_input_layout"
            android:id="@+id/edadNuevaMascota_text_input_layout"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/edadNuevaMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="5"
                    android:inputType="number"
                    android:hint="¿Qué edad tiene tu mascota? (Meses) "/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/edadNuevaMascota_text_input_layout"
            android:id="@+id/descripcionNuevaMascota_text_input_layout"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="100%"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            >

                <EditText
                    android:id="@+id/descripcionNuevaMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="5"
                    android:inputType="text|textMultiLine"
                    android:hint="Describe a tu mascota"
                    android:minHeight="120dp"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_below="@id/descripcionNuevaMascota_text_input_layout"
            android:id="@+id/agregarMascotaButton"
            app:layout_heightPercent="7%"
            app:layout_widthPercent="100%"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Agregar mascota"
            android:background="@color/colorPrimary"
            android:textColor="@color/blanco"/>
</android.support.percent.PercentRelativeLayout>