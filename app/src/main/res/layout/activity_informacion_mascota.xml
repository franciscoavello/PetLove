<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_informacion_mascota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.usach.uxyappsmoviles.petloveprueba.InformacionMascotaActivity">


    <ImageSwitcher
        android:id="@+id/imageSwitcherInfo"
        android:layout_width="match_parent"
        app:layout_heightPercent="50%"/>

    <LinearLayout
        android:id="@+id/infoImportante"
        android:layout_below="@id/imageSwitcherInfo"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="UbicaciÃ³n: "
            android:textSize="15dp"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/ubicacionInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/primaryText"/>
    </LinearLayout>

    <View style="@style/Divider"
        android:id="@+id/separador1"
        android:layout_below="@id/infoImportante"/>

        <TextView
            android:layout_below="@id/separador1"
            android:id="@+id/descripcionMascotaInfo"
            android:layout_width="match_parent"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            android:textSize="15dp"
            android:textColor="@color/secondaryText"/>

    <View style="@style/Divider"
        android:id="@+id/separador2"
        android:layout_below="@id/descripcionMascotaInfo"/>

    <RelativeLayout
        app:layout_heightPercent="20%"
        android:layout_width="match_parent"
        android:layout_below="@id/separador2">

        <LinearLayout
            android:id="@+id/botonesBuscar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/likeMascotaBoton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/estados_boton"
                android:src="@drawable/ic_like"
                android:tint="@color/rojo"
                android:elevation="5dp"/>

            <ImageButton
                android:id="@+id/siguienteMascotaBoton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/estados_boton"
                android:src="@drawable/ic_dislike"
                android:tint="@color/azul"
                android:elevation="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
