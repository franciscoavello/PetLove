<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nombreEditarMascota_text_input_layout"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        app:layout_marginTopPercent="5%"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/nombreEditarMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="5"
            android:inputType="text"
            android:hint="¿Cuál es el nombre de su mascota?"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/nombreEditarMascota_text_input_layout"
        android:id="@+id/razaEditarMascota_text_input_layout"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/razaEditarMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="5"
            android:inputType="text"
            android:hint="¿De qué raza es su mascota?"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/razaEditarMascota_text_input_layout"
        android:id="@+id/edadEditarMascota_text_input_layout"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/edadEditarMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="5"
            android:inputType="number"
            android:hint="¿Qué edad tiene tu mascota? (Meses) "/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/edadEditarMascota_text_input_layout"
        android:id="@+id/descripcionEditarMascota_text_input_layout"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:id="@+id/descripcionEditarMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="5"
            android:inputType="text|textMultiLine"
            android:hint="Describe a tu mascota"
            android:minHeight="120dp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_below="@id/descripcionEditarMascota_text_input_layout"
        android:id="@+id/editarMascotaButton"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Guardar"
        android:background="@color/colorPrimary"
        android:textColor="@color/blanco"/>
</android.support.percent.PercentRelativeLayout>
